<!-- res/layout/activity_main.xml -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <!-- Layout Principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Parte Superior Verde -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/via_cep_green_dark"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Imagem do Logotipo com Fundo Verde Escuro -->
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/logo_viacep"/>

            <!-- Título do App com Texto Branco -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Consulte CEPs de Todo Brasil"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Parte Inferior Branca para o Conteúdo do App -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white">

            <!-- Campo de texto para digitar o CEP -->
            <EditText
                android:id="@+id/editTextCep"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Digite o CEP"
                android:inputType="number"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColorHint="@color/hint_gray"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Botão flutuante para pesquisar -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPesquisar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_menu_search"
        app:tint="@android:color/white"
        app:backgroundTint="@color/via_cep_green"
        android:elevation="8dp"/>
</FrameLayout>
